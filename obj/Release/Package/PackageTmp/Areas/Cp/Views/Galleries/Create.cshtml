@model GallaryPortal.Models.Gallery

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Cp/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm("Create", "Galleries", FormMethod.Post, new { enctype = "multipart/form-data" }))
